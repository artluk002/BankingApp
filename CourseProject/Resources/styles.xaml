    </Style>
    <Style x:Key="LinkLable_Style" TargetType="Label">
        <Setter Property="Foreground" Value="Blue" />
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Background" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
